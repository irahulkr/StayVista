<% layout("/layout/boilerplate") -%>


    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <br><br>
                <h3>Edit this Listing</h3>
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
                    <div class="invalid-feedback">Enter a valid Title</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea class="form-control" name="listing[description]" readonly>
                    <%= listing.description %></textarea>
                    <div class="invalid-feedback">Enter a short description </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-lable">Image URL</label>
                    <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" required/>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listing[price]" value="<%= listing.price %>" class="form-control" required/>
                        <div class="invalid-feedback">Enter a valid Price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input name="listing[country]" value="<%= listing.country %>" type="text"
                            class="form-control" required/>
                        <div class="invalid-feedback">Enter a valid Country name</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/>
                    <div class="invalid-feedback">Enter a valid Location</div>
                </div>

                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </div>
        </div>
        </div>
    </form>